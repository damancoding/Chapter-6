# Calculator

def addNum():
    arg1 = float(input("Enter a number: "))
    arg2 = float(input("Enter a number: "))  
    addsum = arg1 + arg2
    return(addsum)

def subNum():
    arg1 = float(input("Enter a number: "))
    arg2 = float(input("Enter a number: "))
    subsum = arg1 - arg2
    return(subsum)

def mulNum():
    arg1 = float(input("Enter a number: "))
    arg2 = float(input("Enter a number: "))  
    mulsum = arg1 * arg2
    return(mulsum)

def divNum():
    arg1 = float(input("Enter a number: "))
    arg2 = float(input("Enter a number: "))  
    divsum = arg1 / arg2
    return(divsum)

def main():
    selectionN = str(input(f"Choose one operation: addition, subtraction, multiplication, division. "))

    if selectionN == "addition":
        answer = addNum()
        print(answer)
    elif selectionN == "subtraction":
        answer = subNum()
        print(answer)
    elif selectionN == "multiplication":
        answer = mulNum()
        print(answer)
    elif selectionN == "division":
        answer = divNum()
        print(answer)
    else:
        print("Invalid selection.")
        main()
main()


    
